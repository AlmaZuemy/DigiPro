@model ML.Materia
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Alumnos</h2>
<div class="row">
    <div class="col-md-12">
        <h5>Seleccione un registro para editarlo o (+) para agregar...</h5>
        <hr />
    </div>
</div>
<div style="float:right;">
    @Html.ActionLink("Agregar", "Form", "Materia", htmlAttributes: new { @class = "btn btn-success" })
</div>
<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Editar</td>
            <td>IdMateria</td>
            <td>Nombre</td>
            <td>Costo</td>
            <td>Eliminar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (ML.Materia materia in Model.Materias)
        {
        <tr>
            <td><a class="btn btn-warning bi bi-pencil" href="@Url.Action("Form", "Materia", new { IdMateria = materia.IdMateria })"></a></td>
            <td>@materia.IdMateria</td>
            <td>@materia.Nombre</td>
            <td>@materia.Costo</td>
            <td><a class="btn btn-danger bi bi-trash3-fill" href="@Url.Action("Delete", "Materia", new { IdMateria = materia.IdMateria})" onclick="return confirm('Estas seguro que deseas eliminar esta materia?');"></a></td>
        </tr>
        }
    </tbody>
</table>
